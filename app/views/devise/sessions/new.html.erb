<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<br/>
<br/>

<div class="row">
  <div class="col l4 m8 s12 offset-l4 offset-l2">

    <h4>Conecte-se</h4>

    <p class="grey-text center-align">
      Para acessar o sistema, preencha os campos abaixo:
    </p>

    <br/>

    <div class="input-field">
      <i class="material-icons prefix">&#xE0BE;</i>
      <%= f.label :email, 'E-mail: *' %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="input-field">
      <i class="material-icons prefix">&#xE897;</i>
      <%= f.label :password, 'Senha: *' %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <br/>
    <br/>

    <div class="row">
      <div class="left">
        <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, 'Lembrar-me', class: 'small-text-3' %>
        <% end -%>
      </div>

      <div class="right">
        <button type="submit" class="btn waves-effect waves-light btn-large">
          Entrar
        </button>
      </div>
    </div>
  </div>
</div>

<% end %>

<%= render "devise/shared/links" %>
